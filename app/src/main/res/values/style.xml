<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--구분선-->
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">#4B000000</item>
    </style>

    <!--HOME_CARDS-->
    <style name="cards">
        <item name="android:layout_width">141dp</item>
        <item name="android:layout_height">105dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:elevation">30dp</item>
        <item name="cardCornerRadius">10dp</item>
    </style>

    <style name="cards_title">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="cards_content">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="cards_btn">
        <item name="android:layout_height">21dp</item>
        <item name="android:layout_width">76dp</item>
        <item name="android:backgroundTint">#1AFFFFFF</item>
        <item name="android:background">@drawable/btn_radius_ractangle</item>
        <item name="android:textSize">6sp</item>
        <item name="android:textColor">@color/white</item>
        <!--<item name="android:radius">20dp</item>-->
    </style>



    <!--HOME_CALENDER-->
    <style name="wCalender_num">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="wCalender_txt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">50dp</item>
    </style>

    <style name="wCalender">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">75dp</item>
        <item name="cardCornerRadius">7dp</item>
        <item name="cardBackgroundColor">#F8F8F8</item>
        <item name="android:textColor">@color/black</item>
    </style>



    <!--HOME_VERTICAL_SCROLLBAR-->
    <style name="home_vertical_scrollCard">
        <item name="android:layout_width">335dp</item>
        <item name="android:layout_height">148dp</item>
        <item name="cardBackgroundColor">@color/ache_card_background</item>
        <item name="cardCornerRadius">15dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>
    <style name="home_vertical_scrollCard_imgView">
        <item name="android:layout_width">106dp</item>
        <item name="android:layout_height">116dp</item>
        <item name="background">@drawable/image_radius_rectangle</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
    </style>
    <style name="home_vertical_scrollCard_title">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginLeft">140dp</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="home_vertical_scrollCard_content">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:textColor">@color/ache_card_textColor</item>
        <item name="android:layout_marginTop">60dp</item>
        <item name="android:layout_marginLeft">140dp</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="dc_listViewItemCard">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">200dp</item>
        <item name="cardBackgroundColor">@color/ache_card_background</item>
        <item name="cardCornerRadius">15dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>
</resources>