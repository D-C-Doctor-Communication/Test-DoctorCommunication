<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="false" android:textColor="#29000000">
        <shape>
            <solid
                android:color="#FFFFFF"/>
            <stroke
                android:width="1dp"
                android:color="#29000000" />
            <size
                android:width="44dp"
                android:height="22dp" />
            <corners android:bottomLeftRadius="3dp"
                android:topLeftRadius="3dp"/>
        </shape>
    </item>
    <item android:state_selected="true" android:textColor="#ffffff">
        <shape>
            <solid
                android:color="#0078ff"/>
            <stroke
                android:width="1dp"
                android:color="#29000000" />
            <size
                android:width="44dp"
                android:height="22dp" />
            <corners android:bottomLeftRadius="3dp"
                android:topLeftRadius="3dp"/>
        </shape>
    </item>
</selector>

