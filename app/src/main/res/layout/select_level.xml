<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/Leftguideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.07" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/Rightguideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.93" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/Upguideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.03" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/Downguideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.97" />


    <TextView
        android:id="@+id/pattern_text1"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/nanumsquareregular"
        android:gravity="center"
        android:text="통증의 정도를 알려주세요"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@id/Downguideline"
        app:layout_constraintEnd_toEndOf="@id/Rightguideline"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="@id/Leftguideline"
        app:layout_constraintTop_toTopOf="@id/Upguideline"
        app:layout_constraintVertical_bias="0" />

    <SeekBar
        android:id="@+id/level_seekbar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:max="10"
        android:rotation="270"
        android:progressDrawable="@drawable/seekbar"
        android:thumb="@drawable/seekbar_thumb"
        app:layout_constraintBottom_toTopOf="@+id/nextpage"
        app:layout_constraintEnd_toStartOf="@+id/Rightguideline"
        app:layout_constraintHeight_percent="0.6"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/Leftguideline"
        app:layout_constraintTop_toBottomOf="@+id/pattern_text1"
        app:layout_constraintVertical_bias="0.5" />


    <TextView
        android:id="@+id/level_text1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="@font/nanumsquareregular"
        android:gravity="center_vertical|right"
        android:text="통증이 없음"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/backpage"
        app:layout_constraintEnd_toStartOf="@+id/Rightguideline"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pattern_text1"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintWidth_percent="0.35" />

    <TextView
        android:id="@+id/level_text2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="@font/nanumsquareregular"
        android:gravity="center"
        android:padding="10dp"
        android:text="0"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/backpage"
        app:layout_constraintEnd_toStartOf="@+id/Rightguideline"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/level_text1"
        app:layout_constraintTop_toBottomOf="@+id/pattern_text1"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintWidth_percent="0.15" />

    <ImageView
        android:id="@+id/level_part"
        android:src="@drawable/level"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintHeight_percent="0.36"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintBottom_toTopOf="@+id/nextpage"
        app:layout_constraintEnd_toStartOf="@+id/Rightguideline"
        app:layout_constraintStart_toEndOf="@+id/level_text2"
        app:layout_constraintTop_toBottomOf="@+id/pattern_text1"/>


    <ImageButton
        android:id="@+id/nextpage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="0dp"
        android:background="@android:color/transparent"
        android:src="@drawable/gotonext"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.13"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        android:scaleType="fitCenter"
        app:layout_constraintWidth_percent="0.29" />
    <ImageButton
        android:id="@+id/backpage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="0dp"
        android:background="@android:color/transparent"
        android:src="@drawable/gotoback"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.13"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        android:scaleType="fitCenter"
        app:layout_constraintWidth_percent="0.29" />

</androidx.constraintlayout.widget.ConstraintLayout>