<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <androidx.cardview.widget.CardView
        android:clickable="false"
        style="@style/dc_listViewItemCard">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:paddingTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/list_part_title"
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    android:text="부       위"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="20dp"
                    style="@font/fontm"/>
                <TextView
                    android:id="@+id/list_part"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="부위"
                    style="@font/fontm"/>
            </LinearLayout>
            <LinearLayout
                android:paddingTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/list_painLevel_title"
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    android:text="통증정도"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="20dp"
                    style="@font/fontm"/>
                <TextView
                    android:id="@+id/list_painLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="통증정도"
                    style="@font/fontm" />
            </LinearLayout>
            <LinearLayout
                android:paddingTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/list_characteristics_title"
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    android:text="통증양상"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="20dp"
                    style="@font/fontm"/>
                <TextView
                    android:id="@+id/list_characteristics"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="통증양상"
                    style="@font/fontm" />
            </LinearLayout>
            <LinearLayout
                android:paddingTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/list_situation_title"
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    android:text="악화상황"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="20dp"
                    style="@font/fontm"/>
                <TextView
                    android:id="@+id/list_situation"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="악화상황"
                    style="@font/fontm" />
            </LinearLayout>
            <LinearLayout
                android:paddingTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/list_accompany_pain_title"
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    android:text="동반증상"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="20dp"
                    style="@font/fontm"/>
                <TextView
                    android:id="@+id/list_accompany_pain"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="동반증상"
                    style="@font/fontm" />
            </LinearLayout>
            <LinearLayout
                android:paddingTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/list_additional_title"
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    android:text="추가사항"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="20dp"
                    style="@font/fontm"/>
                <TextView
                    android:id="@+id/list_additional"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="추가사항"
                    style="@font/fontm" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>