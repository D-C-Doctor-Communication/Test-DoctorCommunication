<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="?attr/actionBarSize"
        app:mcv_headerTextAppearance="@style/Monthlycalendar_header"
        app:mcv_selectionColor="#1a0078ff"
        app:mcv_showOtherDates="all" />


    <TextView
        android:id="@+id/selectedDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="19dp"
        android:layout_marginBottom="344dp"
        android:text="날짜"
        android:textColor="@color/black"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/noneDataText"
        android:gravity="center"
        android:visibility="invisible"
        android:text="기록된 일정이 없습니다."
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="394dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ListView
        android:id="@+id/MC_listView"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="402dp"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_addAppointDoctor"
        android:layout_width="296dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="165dp"
        android:backgroundTint="#DCDCDC"
        android:text="진료 일정 추가하기"
        android:textColor="@color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="123dp"
        android:text="진료 후기"
        android:textColor="@color/black"
        android:textSize="17sp" />

    <View
        style="@style/Divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="159dp" />

    <TextView
        android:id="@+id/MC_LineTextView"
        android:layout_width="370dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="615dp"
        android:background="#7EE6E6E6"
        android:gravity="left"
        android:lines="3"
        android:maxLines="5"
        android:minLines="1"
        android:scrollbars="vertical"
        android:text="진료 후기를 작성해주세요"
        android:textColor="@color/ache_card_textColor"
        android:textSize="10sp" />

    <EditText
        android:id="@+id/MC_LineEditText"
        android:layout_width="370dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="586dp"
        android:background="#7EE6E6E6"
        android:gravity="left"
        android:inputType="textMultiLine"
        android:lines="3"
        android:maxLines="5"
        android:minLines="1"
        android:scrollbars="vertical"
        android:text="진료 후기를 작성해주세요"
        android:textColor="@color/ache_card_textColor"
        android:textSize="10sp"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/MC_editBtn"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="43dp"
        android:layout_marginBottom="83dp"
        tools:srcCompat="@android:drawable/ic_menu_edit" />


</RelativeLayout>